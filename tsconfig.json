{
  "compilerOptions": {
    "target": "ES6",                 
    "module": "commonjs",            
    "strict": true,                   
    "esModuleInterop": true,         
    "skipLibCheck": true,            
    "forceConsistentCasingInFileNames": true, 
    "experimentalDecorators": true,   
    "emitDecoratorMetadata": true,   
    "outDir": "./dist",               
    "rootDir": "./src",              
    "removeComments": true,          
    "sourceMap": true                 
  },
  "include": [
    "src/**/*"                       
  ],
  "exclude": [
    "node_modules",                   
    "**/*.spec.ts"                    
  ]
}
